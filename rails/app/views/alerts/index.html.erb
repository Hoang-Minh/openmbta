<div class="nav">
  <%= link_to "main", "/mobile" %> &gt; t-alerts
</div>

<div class="info" style="font-weight:bold">
  T-Alerts
</div>

<% @alerts.each do |alert| %>
  <div class="alert <%= cycle('odd', 'even') %>">
    <h4><%= alert.title %>
      <span class="time"><%= DateTime.parse(alert.pub_date).strftime("%b %d %I:%M%p ") %></span>
    </h4>

    <%= alert.description %>

  </div>

<% end %>
