<html lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>OpenMBTA iPhone App</title>
		<%= stylesheet_link_tag 'tripmap' %>
		<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
		<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
		<script type="text/javascript">
			var sw = <%= @sw.to_json %>;
			var ne = <%= @ne.to_json %>;
			var center_lat = <%= @center_lat.to_json %>;
			var center_lng = <%= @center_lng.to_json %>;
			var stops = <%= @stops.to_json %>;
		</script>
    <%= javascript_include_tag 'tripmap.js' %>

  </head>
  <body onload="initialize()">

    <h3>Trips</h3>

	<%= @region.inspect %>

		<div id="stop_info" style="">
		</div>

    <div id="map_canvas" style="width:300px; height:300px">
    </div>

    <%= @result.inspect %> 

  </body>

</html>


